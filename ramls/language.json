{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "returns a language object",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Id of language object"
    },
    "name": {
      "type": "string",
      "description" : "language name, a required field"
    },
    "localeCode": {
      "type": "string",
      "description" : "language code, a required field"
    },
    "metadata": {
      "type": "object",
      "$ref": "raml-util/schemas/metadata.schema",
      "readonly": true
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "localeCode"
  ]
}
