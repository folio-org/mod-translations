{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A collection of translations",
  "type": "object",
  "properties": {
    "translations": {
      "description": "List of translations",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "translation.json"
      }
    },
    "totalRecords": {
      "type": "integer"
    }
  },
  "required": [
    "translations",
    "totalRecords"
  ]
}
